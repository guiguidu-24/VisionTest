<Window
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:VSCaptureExtension" mc:Ignorable="av" x:Class="VSCaptureExtension.CaptureUI"
        Title="Screen capture tool" Height="400" Width="600"
        Background="#1e1e1e" Foreground="White" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:BitmapToImageSourceConverter x:Key="BitmapConverter"/>
        <Style  TargetType="Button">
            <Setter Property="Background" Value="#2b2b2b" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="10,5" />
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Trigger for mouse-over effect -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3c3c3c" />
                    <!-- Brighter background -->
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10,5"/>
            <!--<Setter Property="Padding" Value="4"/>-->
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid >
                                <!-- ToggleButton that covers the entire ComboBox -->

                                <ToggleButton Name="ToggleButton"
                                          Background="Transparent"
                                          BorderBrush="Transparent"
                                          BorderThickness="0"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Focusable="False">

                                    <DockPanel>
                                        <ContentPresenter Margin="6,0,0,0"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Left"
                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                          RecognizesAccessKey="True"/>
                                        <Path DockPanel.Dock="Right"
                                              Margin="5"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Right"
                                              Fill="White"
                                              Data="M 0 0 L 4 4 L 8 0 Z"
                                              Width="10" Height="5"/>
                                    </DockPanel>
                                </ToggleButton>

                                <!-- Dropdown Popup -->
                                <Popup Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                    <Border Background="#2a2a2a"
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="6"
                                        SnapsToDevicePixels="True">
                                        <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="PART_Popup" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" Height="50" Background="#2b2b2b" DockPanel.Dock="Top">
            <Button Command="{Binding ClickNewCommand}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/VSCaptureExtension;component/Resources/Add.png" Stretch="Fill" Width="auto" Height="auto" VerticalAlignment="Center" Margin="5,8,10,8" />
                        <TextBlock Text="New..." FontSize="16" VerticalAlignment="Center" Foreground="White" Margin="0,0,5,0"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <ComboBox SelectedValue="{Binding Shape, Mode=TwoWay}" SelectedValuePath="Tag">
                <ComboBoxItem Tag="{x:Static local:ScreenshotShape.Rectangle}">
                    <StackPanel Orientation="Horizontal" Height="20">
                        <Image Source="pack://application:,,,/VSCaptureExtension;component/Resources/CreatePropertyBrush.png" Margin="0,0,5,0"/>
                        <TextBlock Text="Rectangle" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem Tag="{x:Static local:ScreenshotShape.Window}">
                    <StackPanel Orientation="Horizontal" Height="20">
                        <Image Source="pack://application:,,,/VSCaptureExtension;component/Resources/window-maximize.png" Margin="0,0,5,0"/>
                        <TextBlock Text="Window" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem Tag="{x:Static local:ScreenshotShape.Fullscreen}">
                    <StackPanel Orientation="Horizontal" Height="20">
                        <Image Source="pack://application:,,,/VSCaptureExtension;component/Resources/monitor-screenshot.png" Margin="0,0,5,0"/>
                        <TextBlock Text="Full screen" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem Tag="{x:Static local:ScreenshotShape.FreeShape}">
                    <StackPanel Orientation="Horizontal" Height="20">
                        <Image Source="pack://application:,,,/VSCaptureExtension;component/Resources/shape-oval-plus.png" Margin="0,0,5,0"/>
                        <TextBlock Text="Free shape" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
            </ComboBox>
            <ComboBox SelectedValue="{Binding CaptureDelay, Mode=TwoWay}" SelectedValuePath="Tag">
                <ComboBoxItem Content="No delay" Tag="0"/>
                <ComboBoxItem Content="3 seconds delay" Tag="3"/>
                <ComboBoxItem Content="5 seconds delay" Tag="5"/>
                <ComboBoxItem Content="10 seconds delay" Tag="10"/>
            </ComboBox>
        </StackPanel>

        <!-- Center Text -->
        <Grid Background="#1e1e1e">
            <!--<Grid.Resources>
                <DataTemplate x:Key="ImageTemplate">
                    <Image Source="{Binding CurrentScreenShot}" Stretch="Uniform" />
                </DataTemplate>
                <DataTemplate x:Key="TextTemplate">
                    <TextBlock Text="Press ctrl + alt + print to start capturing."
                               FontSize="16" FontWeight="SemiBold" TextAlignment="Center" VerticalAlignment="Center"
                               HorizontalAlignment="Center" TextWrapping="Wrap" />
                </DataTemplate>
            </Grid.Resources>

            <ContentControl Content="{Binding CurrentScreenShot}">
                <ContentControl.Resources>
                    <local:ConditionalTemplateSelector x:Key="ConditionalTemplateSelector"
                                                       NullTemplate="{StaticResource TextTemplate}"
                                                       NonNullTemplate="{StaticResource ImageTemplate}" />
                </ContentControl.Resources>
            </ContentControl>-->
            <ContentControl Content="{Binding CurrentScreenShot}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <!-- When screenImg is null -->
                            <DataTrigger Binding="{Binding CurrentScreenShot}" Value="{x:Null}">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock Text="Press ctrl + alt + print to start capturing."
                                                       FontSize="16" FontWeight="SemiBold" TextAlignment="Center" VerticalAlignment="Center"
                                                       HorizontalAlignment="Center" TextWrapping="Wrap" />
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                            <!-- When screenImg is NOT null -->
                            <DataTrigger Binding="{Binding CurrentScreenShot}" Value="{x:Static sys:Object}">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <Image Source="{Binding CurrentScreenShot, Converter={StaticResource BitmapConverter}}"
                                               Stretch="Uniform"/>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>

    </DockPanel>
</Window>