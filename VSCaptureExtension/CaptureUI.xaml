<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="VSCaptureExtension.CaptureUI"
        Title="Screen capture tool" Height="400" Width="600"
        Background="#1e1e1e" Foreground="White" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style  TargetType="Button">
            <Setter Property="Background" Value="#2b2b2b" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="10,5" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="BorderThickness" Value="0.8" />
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Content="{TemplateBinding Content}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>    
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" Height="50" Background="#2b2b2b" DockPanel.Dock="Top">
            <Button Padding="10">  
              <Button.Content>  
                  <StackPanel Orientation="Horizontal">  
                      <Image Source="/VSCaptureExtension;component/Resources/Add.png" Stretch="Fill" Width="auto" Height="auto" VerticalAlignment="Center" Margin="5,8,10,8" />  
                      <TextBlock Text="New..." FontSize="16" VerticalAlignment="Center" Foreground="White" Margin="0,0,5,0"/>
                  </StackPanel>  
              </Button.Content>  
            </Button>
            <Button>
              <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/VSCaptureExtension;component/Resources/CreatePropertyBrush.png" Stretch="Fill" Margin="5,0,0,0"/>
                        <Image Source="/VSCaptureExtension;component/Resources/ExpandDown.png" Stretch="Fill" Margin="5,15,5,10" />
                    </StackPanel>
                </Button.Content>
              <Button.ContextMenu>
                  <ContextMenu>
                      <MenuItem Header="Rectangle" />
                      <MenuItem Header="Window" />
                      <MenuItem Header="Full Screen" />
                      <MenuItem Header="Free Shape" />
                  </ContextMenu>
              </Button.ContextMenu>
            </Button>
            <Button >
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/VSCaptureExtension;component/Resources/Timer.png" Stretch="Fill" Margin="5"/>
                        <Image Source="/VSCaptureExtension;component/Resources/ExpandDown.png" Stretch="Fill" Margin="5,15,5,10" />
                    </StackPanel>
                </Button.Content>
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="No delay" />
                        <MenuItem Header="3 seconds delay" />
                        <MenuItem Header="5 seconds delay" />
                        <MenuItem Header="10 seconds delay" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </StackPanel>

        <!-- Center Text -->
        <Grid Background="#1e1e1e">
            <TextBlock Text="Press ctrl + alt + print to start capturing."
                       FontSize="16" FontWeight="SemiBold" TextAlignment="Center" VerticalAlignment="Center"
                       HorizontalAlignment="Center" TextWrapping="Wrap" />
        </Grid>

    </DockPanel>
</Window>