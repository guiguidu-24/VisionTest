<UserControl x:Class="VisionTest.VSExtension.MyToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:util="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
             xmlns:catalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
             xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit" xmlns:vsextension="clr-namespace:VisionTest.VSExtension" d:DataContext="{d:DesignInstance Type=vsextension::MainViewModel}"
             toolkit:Themes.UseVsTheme="True"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             Name="MyToolWindow">
    <StackPanel>
        <StackPanel.Resources>
            <!-- Hide Image if CurrentScreenShot is null -->
            <Style TargetType="Image" x:Key="PreviewImage">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding CurrentScreenShot}" Value="{x:Null}">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </StackPanel.Resources>

        <!-- Top-left corner button with "+" icon -->
        <Button x:Name="AddButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Height="30" Padding="5" Command="{Binding ClickAddCommand}">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/VSCaptureExtension;component/Resources/Add.png" Stretch="Fill" Width="auto" Height="auto" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Add" VerticalAlignment="Center"/>
                </StackPanel>
            </Button.Content>
        </Button>

        <Image Grid.Column="1" Style="{StaticResource PreviewImage}" Source="{Binding CurrentScreenShot}" Stretch="Uniform" HorizontalAlignment="Center" MaxHeight="100" MinHeight="40"/>

        <!-- Checkboxes and TextBox -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Dark transparent rectangle -->



            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center" Text="Text found : " Margin="5" />
            <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"  x:Name="FoundTextBox" Text="{Binding TextFound}" Margin="5" IsReadOnly="True"
                     MinLines="3" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Image name : " />
            <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" Text="{Binding CurrentElementName}"/>
        </Grid>
        <Button Content="Save" HorizontalAlignment="Right" Padding="20,1" Margin="10,20" Command="{Binding SaveCommand}"/>
    </StackPanel>
</UserControl>
